@model dynamic
@{
    ViewBag.Title = "Check Load Eligibility";
}
<section class="page-title page-title-2 image-bg overlay parallax" style="height:125px">
    <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 0px, 0px); background: url(&quot;img/home10.jpg&quot;); top: -100px;">
        <img alt="Background Image" class="background-image" src="img/home10.jpg" style="display: none;">
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-top: 33px">
            <div class="col-md-6">
                <h2 class="uppercase mb8" style="font-size:25px;line-height:25px">Apply for Loan</h2>
                <p class="lead mb0">Complete the form to apply for a loan.</p>
            </div>
            <div class="col-md-6 text-right hidden-xs hidden-sm">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home", new { }, null)
                    </li>
                    <li class="active">Apply for Loan</li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

<div data-ng-app="ubuild">

    <div class="container-fluid container-fixed-lg" data-ng-controller="LoanApplicationController as vm">
        <div id="rootwizard" class="m-t-50">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator nav-stack-sm" role="tablist" data-init-reponsive-tabs="dropdownfx">

                <li class="nav-item">
                    <a class="active" data-toggle="tab" href="#tab2" role="tab"><i class="fa fa-search tab-icon"></i> <span>Check Eligibility </span></a>
                </li>
                <li class="nav-item">
                    <a class="" data-toggle="tab" href="#tab3" role="tab"><i class="fa fa-gear tab-icon"></i> <span> Options Type</span></a>
                </li>
                <li class="nav-item">
                    <a class="" data-toggle="tab" href="#tab4" role="tab"><i class="fa fa-file tab-icon"></i> <span>Complete Information</span></a>
                </li>
                <li class="nav-item">
                    <a class="" data-toggle="tab" href="#tab5" role="tab"><i class="fa fa-check tab-icon"></i> <span>Thank You</span></a>
                </li>
            </ul>
            <!-- Tab panes -->

            <div class="tab-content">

                <div class="tab-pane active slide-left padding-20 sm-no-padding" id="tab2">
                    <div class="row row-same-height">
                        <div class="col-md-8 b-r b-dashed b-grey ">

                            <section ng-controller="EligibilityCtrl" ng-init="init(true,vm.eligibilityCallback)" style="padding-top: 0">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-8  col-sm-12 text-center">
                                            <form id="msform">
                                                <!-- progressbar -->
                                                <ul id="progressbar">
                                                    <li class="active">Choose Loan Type</li>
                                                    <li ng-if="builder.loanType=='Phase'">Choose Phase </li>
                                                    <li>Your Financials</li>

                                                </ul>
                                                <!-- fieldsets -->
                                                <fieldset>
                                                    <h2 class="fs-title">Choose Loan Type</h2>
                                                    <div class="radio radio-success">
                                                        <span title="Choose this loan type buy a full house">
                                                            <input type="radio" checked="checked" ng-model="builder.loanType" name="loanType" value="Fullhouse" id="fullhouse">
                                                            <label for="fullhouse">Full House</label>
                                                        </span>
                                                        <span style="display: inline-block" title="Choose this loan type to complete a particular phase of your building project ">
                                                            <input type="radio" ng-model="builder.loanType" name="loanType" id="phase" value="Phase">
                                                            <label for="phase">Phase</label>
                                                        </span>
                                                    </div>
                                                    <input type="button" name="next" class="msformnext action-button" value="Next" title="Select a loan type to continue." ng-disabled="!builder.loanType" />
                                                </fieldset>
                                                <fieldset ng-show="builder.loanType=='Phase'">
                                                    <h2 class="fs-title">Choose Phase</h2>
                                                    <div>
                                                        <select class="" ng-model="builder.phase">
                                                            <option value="">-Select Phase-</option>
                                                            <option>Land</option>
                                                            <option>Foundation</option>
                                                            <option>Walls</option>
                                                            <option>Roof</option>
                                                            <option>Fittings and Fixtures</option>
                                                        </select>
                                                    </div>
                                                    <input type="button" name="previous" class="msformprevious action-button" value="Previous" />
                                                    <input type="button" name="next" class="msformnext action-button" value="Next" title="Complete form to continue." ng-disabled="!builder.phase" />
                                                </fieldset>
                                                <fieldset>
                                                    <h2 class="fs-title">Enter your financials</h2>
                                                    <div>
                                                        <div class="form-group">
                                                            <label>Choose Currency</label>
                                                            <div class="radio radio-success">
                                                                <input type="radio" checked="checked" ng-model="builder.currency" name="currency" value="GHS" id="currencyGHS">
                                                                <label for="currencyGHS">GHS</label>
                                                                <input type="radio" ng-model="builder.currency" name="currency" id="currencyUSD" value="USD">
                                                                <label for="currencyUSD">USD</label>
                                                            </div>
                                                        </div>
                                                        <div class="form-group form-group-default" ng-show="builder.currency" title="How much do you earn monthly?">
                                                            <label>Monthly Income</label>
                                                            <div class="irs-wrapper danger">
                                                                <input type="text" name="" ng-model="builder.monthlyIncome" value="0" id="loan_monthly_income" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group form-group-default" ng-show="builder.currency">
                                                            <label>Loan Amount</label>
                                                            <div class="irs-wrapper danger">
                                                                <input type="text" name="" ng-model="builder.loanAmount" value="0" id="loan_amount" />
                                                            </div>
                                                        </div>
                                                        <div class="form-group form-group-default" ng-show="builder.currency">
                                                            <label>Interest Rate</label>
                                                            <div class="irs-wrapper danger">
                                                                <input type="text" name="" ng-model="builder.loanInterestRate" value="0;100" id="loan_Irate" />
                                                            </div>
                                                        </div>

                                                        <div class="form-group form-group-default" ng-show="builder.currency">
                                                            <label>Loan Tenure(Years)</label>
                                                            <div class="irs-wrapper danger">
                                                                <input type="text" name="" ng-model="builder.loanTenure" value="12,24" id="loan_Tenure" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <input type="button" name="previous" class="msformprevious action-button" value="Previous" />
                                                    <input type="button" data-ng-click="checkEligibility()" ng-disabled="!builder.currency" style="width: 200px" class="action-button" value="Check Eligibility" />



                                                </fieldset>

                                            </form>
                                        </div>
                                    </div>
                                    <!--end of row-->
                                </div>
                                <!--end of container-->
                            </section>


                        </div>

                    </div>
                </div>


                <div class="tab-pane slide-left padding-20 sm-no-padding" id="tab3">
                    <div class="row row-same-height">
                        <div class="col-md-8 b-r b-dashed b-grey ">
                            <div>

                                <ul id="house_selction_list" class="row">
                                    <li class="col-md-4">
                                        <div class="">
                                            <label>
                                                <input class="radio" type="radio" name="housetype1" value="1-bedroom" ng-model="vm.housetype" />
                                                <img src="/images/1.jpeg" class="img-responsive img-rounded" alt="Cinque Terre" style="width: 50%; height: auto;">
                                                <h5>1 Bed Room Apartment</h5>
                                            </label>
                                        </div>

                                    </li>
                                    <li class="col-md-4">
                                        <div class="">
                                            <label>
                                                <input type="radio" name="housetype2" value="2-bedroom" ng-model="vm.housetype" />
                                                <img src="/images/2.jpeg" class="img-responsive img-rounded" alt="Cinque Terre" style="width: 50%; height: auto;">
                                                <h5>2 Bed Room Apartment</h5>
                                            </label>
                                        </div>


                                    </li>
                                    <li class="col-md-4">
                                        <div class="">
                                            <label>
                                                <input type="radio" name="housetype3" value="3-bedroom" ng-model="vm.housetype" />
                                                <img src="/images/3.jpeg" class="img-responsive img-rounded" alt="Cinque Terre" style="width: 50%; height: auto;">
                                                <h5>3 Bed Room Apartment</h5>
                                            </label>
                                        </div>

                                    </li>
                                </ul>


                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-12">
                                    <div data-pages="card" class="card card-default" id="card-basic">
                                        <div class="card-header  ">
                                            <div class="card-title">
                                                Customizable Components
                                            </div>
                                        </div>
                                        <div class="card-block">
                                            <div class="row">
                                                <div class="form-group form-group-default form-group-default-select2 " style="height: 60px">
                                                    <label class="">Doors</label>
                                                    <select class="full-width select2-hidden-accessible" data-placeholder="Select Door" data-init-plugin="select2" tabindex="-1" aria-hidden="true">
                                                        <option value="WA">Door 1</option>
                                                        <option value="WA">Door 2</option>
                                                        <option value="WA">Door 3</option>
                                                    </select><span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" style="width: 334px;">
                                                        <span class="selection">
                                                            <span class="select2-selection select2-selection--single" role="combobox"
                                                                  aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-u1vf-container">
                                                            </span>
                                                        </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group form-group-default form-group-default-select2 " style="height: 60px">
                                                    <label class="">Wall</label>
                                                    <select class="full-width select2-hidden-accessible" data-placeholder="Select Door" data-init-plugin="select2" tabindex="-1" aria-hidden="true">
                                                        <option value="WA">Wall type 1</option>
                                                        <option value="WA">Wall type 2</option>
                                                        <option value="WA">Wall type 3</option>
                                                    </select><span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" style="width: 334px;">
                                                        <span class="selection">
                                                            <span class="select2-selection select2-selection--single" role="combobox"
                                                                  aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-u1vf-container">
                                                            </span>
                                                        </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group form-group-default form-group-default-select2 " style="height: 60px">
                                                    <label class="">Windows</label>
                                                    <select class="full-width select2-hidden-accessible" data-placeholder="Select Door" data-init-plugin="select2" tabindex="-1" aria-hidden="true">
                                                        <option value="WA">Window type 1</option>
                                                        <option value="WA">Window Type 2</option>
                                                        <option value="WA">Window Type 3</option>
                                                    </select><span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" style="width: 334px;">
                                                        <span class="selection">
                                                            <span class="select2-selection select2-selection--single" role="combobox"
                                                                  aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-u1vf-container">
                                                            </span>
                                                        </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group form-group-default form-group-default-select2 " style="height: 60px">
                                                    <label class="">Furniture</label>
                                                    <select class="full-width select2-hidden-accessible" data-placeholder="Select Door" data-init-plugin="select2" tabindex="-1" aria-hidden="true">
                                                        <option value="WA">Furniture type 1</option>
                                                        <option value="WA">Furniture Type 2</option>
                                                        <option value="WA">Furniture Type 3</option>
                                                    </select><span class="select2 select2-container select2-container--default select2-container--below select2-container--focus" dir="ltr" style="width: 334px;">
                                                        <span class="selection">
                                                            <span class="select2-selection select2-selection--single" role="combobox"
                                                                  aria-haspopup="true" aria-expanded="false" tabindex="0" aria-labelledby="select2-u1vf-container">
                                                            </span>
                                                        </span><span class="dropdown-wrapper" aria-hidden="true"></span>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div data-pages="card" class="card card-default" id="card-basic">
                                        <div class="card-header  ">
                                            <div class="card-title">
                                                Amount updates here
                                            </div>
                                        </div>
                                        <div class="card-block">

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane slide-left padding-20 sm-no-padding" id="tab4">
                    <div class="row">
                        <div class="col-md-5 b-r b-dashed b-grey ">
                            <h4>Account Info</h4>
                            <form class="" role="form">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.FullName">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label>Account Number</label>
                                            <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.accountNumber">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Customer ID</label>
                                            <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.customerNo">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Applying For</label>
                                    <input type="text" class="form-control" value="PHASE" readonly="" data-ng-model="vm.applyModel.applyingFor">
                                </div>
                                <div class="form-group">
                                    <label>For Phase</label>
                                    <input type="text" class="form-control" value="PHASE" readonly="" data-ng-model="vm.applyModel.forPhase">
                                </div>

                            </form>
                        </div>
                        <div class="col-md-6">
                            <h4>Complete Loan Form</h4>
                            <form role="form">

                                <div class="form-group">
                                    <label>Loan Amount</label>
                                    <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.AmtSought">
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Loan Tenure</label>
                                            <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.loanTenure">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Tenure Unit</label>
                                            <input type="text" class="form-control" readonly="" data-ng-model="vm.applyModel.loanTenureUnit">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>Repayment Method</label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.RepaymentMethod">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Specify Other</label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.RepaymentOther">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Purpose of Loan</label>
                                    <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.PurposeofLoan">
                                </div>
                                <div class="form-group">
                                    <label>
                                        Protection Cover
                                        <input type="checkbox" data-ng-model="vm.applyModel.ProtectionCover">
                                    </label>
                                    <label>
                                        Protection Secured
                                        <input type="checkbox" data-ng-model="vm.applyModel.ProtectionSecured">
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>Protection Security Type </label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.ProtectionSecurityType">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Protection Security Details</label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.ProtectionSecurityDetails">
                                    </div>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane slide-left padding-20 sm-no-padding" id="tab5">
                    <h1>Thank you for your loan application. Your ULAIN information is <b>1234</b> .</h1>
                </div>
                <div class="padding-20 sm-padding-5 sm-m-b-20 sm-m-t-20 bg-white clearfix">
                    <ul class="pager wizard no-style">
                        <li class="next">
                            <button class="action-button" type="button" ng-show="vm.applyModel.eligible">
                                <span>Next</span>
                            </button>
                        </li>
                        <li class="next finish hidden">
                            <button class="action-button" type="button">
                                <span>Finish</span>
                            </button>
                        </li>
                        <li class="previous first hidden">
                            <button class="action-button" type="button">
                                <span>First</span>
                            </button>
                        </li>
                        <li class="previous">
                            <button class="action-button" type="button">
                                <span>Previous</span>
                            </button>
                        </li>
                        <li class="send-application">
                            <button class="action-button" type="button" data-ng-click="vm.submitLoanApplication()">
                                <span><i class="fa fa-send"></i> Submit Application</span>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="wizard-footer padding-20 bg-master-light">
                    <p class="small hint-text pull-left no-margin">
                    </p>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>


