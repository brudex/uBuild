
@model ProjectUbuild.Models.ApplyLoanViewModel
@{
    ViewBag.Title = "Loan Application";
}
<section class="page-title page-title-2 image-bg overlay parallax" style="height:125px">
    <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 0px, 0px); background: url(&quot;img/home10.jpg&quot;); top: -100px;">
        <img alt="Background Image" class="background-image" src="/img/home10.jpg" style="display: none;">
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-top: 33px">
            <div class="col-md-6">
                <h2 class="uppercase mb8" style="font-size:25px;line-height:25px">Apply for Loan</h2>
                <p class="lead mb0">Complete the form to apply for a loan.</p>
            </div>
            <div class="col-md-6 text-right hidden-xs hidden-sm">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home", new {}, null)
                    </li>
                    <li class="active">Apply for Loan</li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>

<div data-ng-app="ubuild">

    <div class="container-fluid container-fixed-lg" data-ng-controller="LoanApplicationController as vm">
        <div id="rootwizard" class="m-t-50">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs nav-tabs-linetriangle nav-tabs-separator nav-stack-sm" role="tablist" data-init-reponsive-tabs="dropdownfx">
                <li class="nav-item">
                    <a class="active" data-toggle="tab" href="#tab4" role="tab"><i class="fa fa-file tab-icon"></i> <span>Complete Information</span></a>
                </li>
                <li class="nav-item">
                    <a class="" data-toggle="tab" href="#tab5" role="tab"><i class="fa fa-check tab-icon"></i> <span>Thank You</span></a>
                </li>
            </ul>
            <!-- Tab panes -->

            <div class="tab-content">
                <div class="tab-pane slide-left active padding-20 sm-no-padding" id="tab4">
                    <div class="row">
                        <div class="col-md-5 b-r b-dashed b-grey ">
                            <h4>Account Info</h4>
                            <form class="" role="form">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input type="text" class="form-control" data-ng-model="vm.applyModel.FullName">
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label>Account Number</label>
                                            <input type="text" class="form-control" data-ng-model="vm.applyModel.accountNumber" placeholder="GHL customers only">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Customer ID</label>
                                            <input type="text" class="form-control" data-ng-model="vm.applyModel.customerNo">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Applying For</label>
                                    <div class="radio radio-success">
                                        <span title="Choose this loan type buy a full house">
                                            <input type="radio" checked="checked" ng-model="vm.applyModel.applyingFor" name="loanType" value="1" id="fullhouse">
                                            <label for="fullhouse">Full House</label>
                                        </span>
                                        <span style="display: inline-block" title="Choose this loan type to complete a particular phase of your building project ">
                                            <input type="radio" ng-model="vm.applyModel.applyingFor" name="loanType" id="phase" value="2">
                                            <label for="phase">Phase</label>
                                        </span>
                                    </div>
                                </div>

                                <div class="form-group" data-ng-show="vm.applyModel.applyingFor == 2">
                                    <label>Choose Phase</label>
                                    <div>
                                        <select class="" ng-model="vm.applyModel.forPhase" data-ng-options="item.RecordId as item.PhaseName for item in vm.buildingPhases">
                                            <option value="">-Select Phase-</option>
                                        </select>
                                    </div>
                                </div> 
                                
                            </form>
                        </div>
                        <div class="col-md-6">
                            <h4>Complete Loan Form</h4>
                            <form role="form"> 
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>Currency</label>
                                            <select class="form-control" data-ng-model="vm.applyModel.currency" data-ng-options="item.RecordId as item.ISOCode for item in vm.currencies">

                                            </select>
                                        </div>
                                        <div class="col-md-8">
                                            <label>Loan Amount</label>
                                            <input type="text"  class="form-control" data-ng-model="vm.applyModel.AmtSought">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Loan Tenure</label>
                                            <input type="text"  class="form-control" data-ng-model="vm.applyModel.loanTenure">
                                        </div>
                                        <div class="col-md-6">
                                            <label>Tenure Unit</label>
                                            <select class="form-control" data-ng-model="vm.applyModel.loanTenureUnit">
                                                <option value="Months">Month(s)</option>
                                                <option value="Years">Year(s)</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    
                                        <label>Repayment Method</label>
                                        <select class="form-control" required="" data-ng-model="vm.applyModel.RepaymentMethod" data-ng-options="item.RecordId as item.Method for item in vm.repaymentMethods">
                                            <option value="">-Select Repayment Method-</option>
                                        </select>
                                    
                                    
                                </div>
                                <div class="form-group">
                                    <label>Purpose of Loan</label>
                                    <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.PurposeofLoan">
                                </div>
                                <div class="form-group">
                                    <label>
                                        Protection Cover
                                        <input type="checkbox" data-ng-model="vm.applyModel.ProtectionCover">
                                    </label>
                                    <label>
                                        Protection Secured
                                        <input type="checkbox" data-ng-model="vm.applyModel.ProtectionSecured">
                                    </label>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-6">
                                        <label>Protection Security Type </label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.ProtectionSecurityType">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Protection Security Details</label>
                                        <input type="text" class="form-control" required="" data-ng-model="vm.applyModel.ProtectionSecurityDetails">
                                    </div>
                                </div>
                                <button class="action-button" type="button" data-ng-click="vm.submitLoanApplication()">
                                    <span><i class="fa fa-send"></i> Submit Application</span>
                                </button>

                            </form>
                        </div>
                    </div>
                </div>

                <div class="tab-pane slide-left padding-20 sm-no-padding" id="tab5">
                    <h1>Thank you for your loan application. Your ULAIN information is <b data-ng-bind="vm.ulain"></b> .</h1>
                </div>
                <div class="padding-20 sm-padding-5 sm-m-b-20 sm-m-t-20 bg-white clearfix">
                    <ul class="pager wizard no-style">
                        <li class="next">
                            <button class="action-button" type="button" ng-show="vm.applyModel.eligible">
                                <span>Next</span>
                            </button>
                        </li>
                        <li class="next finish hidden">
                            <button class="action-button" type="button">
                                <span>Finish</span>
                            </button>
                        </li>
                        <li class="previous first hidden">
                            <button class="action-button" type="button">
                                <span>First</span>
                            </button>
                        </li>
                        <li class="previous">
                            <button class="action-button" type="button">
                                <span>Previous</span>
                            </button>
                        </li>
                        <li class="send-application">
                            <button class="action-button" type="button" data-ng-click="vm.submitLoanApplication()">
                                <span><i class="fa fa-send"></i> Submit Application</span>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="wizard-footer padding-20 bg-master-light">
                    <p class="small hint-text pull-left no-margin">
                    </p>

                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    window.loanVals = @Html.Raw(Model.json)
</script>
