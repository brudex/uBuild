@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageTitle = "My Messages";
}

<section class="page-title page-title-2 image-bg overlay parallax" style="height:125px">
    <div class="background-image-holder fadeIn" style="transform: translate3d(0px, 0px, 0px); background: url(&quot;img/home10.jpg&quot;); top: -100px;">
        <img alt="Background Image" class="background-image" src="img/home10.jpg" style="display: none;">
    </div>
    <div class="container-fluid">
        <div class="row" style="margin-top: 33px">
            <div class="col-md-6">
                <h2 class="uppercase mb8" style="font-size:25px;line-height:25px">Messages</h2>
                <p class="lead mb0">Exchange messages with GHL Support Team.</p>
            </div>
            <div class="col-md-6 text-right hidden-xs hidden-sm">
                <ol class="breadcrumb breadcrumb-2">
                    <li>
                        @Html.ActionLink("My Messages", "Messages", "Profile", new { }, null)
                    </li>
                    <li class="active">My Profile</li>
                </ol>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
<section style="padding-top: 0" data-ng-controller="MessagingCtrl as vm" data-ng-init="init()">
   
    @*<h3 class=" text-center">Messaging</h3>*@
    <div class="messaging col-md-8">
        <div class="inbox_msg">
            <div class="mesgs">
                <div class="card-progress" style="background-color: rgba(255, 255, 255, 0.8); display: block;" data-ng-show="vm.ajax">
                    <div class="progress-circle-indeterminate progress-circle-master"></div>
                </div>
                <div class="msg_history">
                    <div data-ng-repeat="msg in Messages" data-ng-class="{'incoming_msg':msg.Admin,'outgoing_msg':msg.Client}">
                        <div class="incoming_msg_img" data-ng-if="msg.Admin"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                        <div data-ng-class="{'received_msg':msg.Admin,'outgoing_msg':msg.Client}">
                            <div data-ng-class="{'received_withd_msg':msg.Admin,'sent_msg':msg.Client}">
                                <p>
                                    {{msg.Message}}
                                </p>
                                <span class="time_date" data-ng-bind="msg.CreateDate | date :'yyyy-MM-dd h:mma'"> 11:01 AM | June 9</span>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <input type="text" class="write_msg form-control" placeholder="Type a message" data-ng-model="model.message"/>
                        <button class="msg_send_btn" data-ng-click="vm.saveMessage()" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>

